<h1> Post </h1>

<p> Titulo:  <%= @post.titulo %> </p>
<p> Usuario: <%= @post.usuario.nombre %>
<p> Mensaje: <%= @post.mensaje %> </p>

<p> <%= link_to 'Volver a los post', posts_path %> | <%= link_to 'Eliminar', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>

<h1> Comentarios al post </h1>

<% @post.comments.each do |c| %>

<br><br>
<p> Titulo:  <%= c.titulo %> </p>
<p> Usuario: <%= c.usuario.nombre %>
<p> Mensaje: <%= c.mensaje %> </p>

<% end %>

<h1> Nuevo comentario </h1>

<%= form_for([@post, @post.comments.build]) do |f| %>
<p>

 <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </p>

 <p>
    <%= f.label :mensaje %><br>
    <%= f.text_area :mensaje %>
 </p>
  <p>
    <%= f.label :usuario_id %>
    <%= collection_select(:comment, :usuario_id, @usuarios, :id, :nombre) %>
 </p>
 <%= f.submit %>

</p>
<% end %>

